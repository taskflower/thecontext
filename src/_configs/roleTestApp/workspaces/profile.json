{
  "name": "My Profile",
  "slug": "profile",
  "rolesAllowed": [
    "admin",
    "reporter",
    "support"
  ],
  "templateSettings": {
    "layoutFile": "Simple",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "colSpan": "full",
          "variant": "detailed",
          "loginnavURL": "/main/login/form",
          "logoutnavURL": "/main",
          "editnavURL": "/profile/edit/form"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "üë§ Profile Management",
        "attrs": {
          "content": "Manage your personal information and account settings.",
          "variant": "info"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üìã View Full Profile",
        "attrs": {
          "navURL": "/profile/view/view",
          "variant": "primary"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "‚úèÔ∏è Edit Profile",
        "attrs": {
          "navURL": "/profile/edit/form",
          "variant": "secondary"
        }
      }
    ]
  },
  "contextSchema": {
    "user": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "label": "First Name",
          "fieldType": "text",
          "required": true
        },
        "lastName": {
          "type": "string",
          "label": "Last Name",
          "fieldType": "text",
          "required": true
        },
        "email": {
          "type": "string",
          "label": "Email",
          "fieldType": "email",
          "required": true
        },
        "role": {
          "type": "string",
          "label": "Role",
          "fieldType": "text",
          "required": true
        }
      }
    }
  }
}