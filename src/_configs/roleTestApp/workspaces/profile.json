{
  "name": "My Profile",
  "slug": "profile",
  "rolesAllowed": [
    "admin",
    "reporter",
    "support"
  ],
  "templateSettings": {
    "layoutFile": "Simple",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "compact",
          "loginNavPath": "main/login/form",
          "logoutNavPath": "main/dashboard/view", 
          "editNavPath": "profile/edit/form"
        }
      }
    ]
  },
  "contextSchema": {
    "user": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "label": "First Name",
          "fieldType": "text",
          "required": true
        },
        "lastName": {
          "type": "string",
          "label": "Last Name",
          "fieldType": "text",
          "required": true
        },
        "email": {
          "type": "string",
          "label": "Email",
          "fieldType": "email",
          "required": true
        },
        "role": {
          "type": "string",
          "label": "Role",
          "fieldType": "text",
          "required": true
        }
      }
    }
  }
}