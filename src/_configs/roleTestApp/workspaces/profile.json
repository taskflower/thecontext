{
  "name": "My Profile",
  "slug": "profile",
  "rolesAllowed": ["admin", "reporter", "support"],
  "templateSettings": {
    "layoutFile": "Simple",
    "parentClass": "grid gap-6 grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "detailed",
          "loginnavigationPath": "/main/login/form",
          "logoutnavigationPath": "/main",
          "editnavigationPath": "/profile/edit/form",
          "cellClass": "col-span-full"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "üë§ Profile Management",
        "attrs": {
          "content": "Manage your personal information and account settings.",
          "variant": "info",
          "cellClass": "col-span-full md:col-span-1 lg:col-span-2"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üìã View Full Profile",
        "attrs": {
          "navigationPath": "/profile/view/view",
          "variant": "primary",
          "cellClass": "col-span-1"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "‚úèÔ∏è Edit Profile",
        "attrs": {
          "navigationPath": "/profile/edit/form",
          "variant": "secondary",
          "cellClass": "col-span-1"
        }
      }
    ]
  },
  "contextSchema": {
    "user": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "label": "First Name",
          "fieldType": "text",
          "required": true
        },
        "lastName": {
          "type": "string",
          "label": "Last Name",
          "fieldType": "text",
          "required": true
        },
        "email": {
          "type": "string",
          "label": "Email",
          "fieldType": "email",
          "required": true
        },
        "role": {
          "type": "string",
          "label": "Role",
          "fieldType": "text",
          "required": true
        }
      }
    }
  }
}