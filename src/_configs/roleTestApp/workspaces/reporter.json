{
  "slug": "reporter",
  "name": "Reporter Dashboard",
  "rolesAllowed": ["reporter"],
  "templateSettings": {
    "layoutFile": "Simple",
    "parentClass": "grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-4",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "compact",
          "loginNavigationPath": "/main/login/form",
          "logoutNavigationPath": "/main",
          "editNavigationPath": "/profile/edit/form",
          "cellClass": "col-span-full md:col-span-1"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "üìù Reporter Dashboard",
        "attrs": {
          "content": "Create and track your tickets.",
          "variant": "info",
          "cellClass": "col-span-full md:col-span-1 lg:col-span-2"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "‚ûï New Ticket",
        "attrs": {
          "navigationPath": "/reporter/create/form",
          "variant": "primary",
          "cellClass": "col-span-1"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üìã My Tickets",
        "attrs": {
          "navigationPath": "/reporter/list/view",
          "variant": "secondary",
          "cellClass": "col-span-1"
        }
      }
    ]
  },
  "contextSchema": {
    "ticket": {
      "type": "object",
      "properties": {
        "title": {
          "type": "string",
          "label": "Title",
          "fieldType": "text",
          "required": true
        },
        "description": {
          "type": "string",
          "label": "Description",
          "fieldType": "textarea",
          "required": true
        },
        "priority": {
          "type": "string",
          "label": "Priority",
          "fieldType": "select",
          "enum": ["low", "medium", "high"],
          "enumLabels": {
            "low": "Low",
            "medium": "Medium",
            "high": "High"
          },
          "default": "medium",
          "required": true
        },
        "status": {
          "type": "string",
          "label": "Status",
          "fieldType": "select",
          "enum": ["new"],
          "default": "new",
          "required": true
        },
        "reporterId": {
          "type": "string",
          "label": "Reporter ID",
          "fieldType": "text",
          "required": false
        }
      }
    }
  }
}