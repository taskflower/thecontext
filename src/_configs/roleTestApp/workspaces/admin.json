{
  "name": "Admin Dashboard",
  "slug": "admin",
  "rolesAllowed": ["admin"],
  "templateSettings": {
    "layoutFile": "Simple",
    "parentClass": "grid gap-4 grid-cols-1 md:grid-cols-2 lg:grid-cols-3",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "compact",
          "loginnavURL": "/main/login/form",
          "logoutnavURL": "/main",
          "editnavURL": "/profile/edit/form",
          "cellClass": "col-span-full md:col-span-1"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "‚öôÔ∏è Admin Dashboard",
        "attrs": {
          "content": "Manage users and system settings.",
          "variant": "info",
          "cellClass": "col-span-full md:col-span-1 lg:col-span-2"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üë• Manage Users",
        "attrs": {
          "navURL": "/admin/list/view",
          "variant": "primary",
          "cellClass": "col-span-1"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "‚ûï Add User",
        "attrs": {
          "navURL": "/admin/create/form",
          "variant": "secondary",
          "cellClass": "col-span-1"
        }
      }
    ]
  },
  "contextSchema": {
    "user": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "label": "First Name",
          "fieldType": "text",
          "required": true
        },
        "lastName": {
          "type": "string",
          "label": "Last Name",
          "fieldType": "text",
          "required": true
        },
        "email": {
          "type": "string",
          "label": "Email",
          "fieldType": "email",
          "required": true
        },
        "role": {
          "type": "string",
          "label": "Role",
          "fieldType": "select",
          "enum": ["reporter", "support", "admin"],
          "enumLabels": {
            "reporter": "Reporter",
            "support": "Support",
            "admin": "Admin"
          },
          "required": true
        },
        "isActive": {
          "type": "boolean",
          "label": "Active",
          "fieldType": "checkbox",
          "default": true
        }
      }
    }
  }
}