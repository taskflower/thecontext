{
  "name": "Main Dashboard",
  "slug": "main",
  "templateSettings": {
    "layoutFile": "Simple",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "colSpan": 3,
          "variant": "compact",
          "loginnavURL": "/main/login/form",
          "logoutnavURL": "/main/dashboard/view", 
          "editnavURL": "/profile/edit/form"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "üöÄ 3-Role System Demo",
        "attrs": {
          "content": "Simple app with 3 roles: Reporter (creates tickets), Support (handles tickets), Admin (manages users).",
          "variant": "info",
          "colSpan": "full"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üë§ Login",
        "attrs": {
          "colSpan": 2,
          "navURL": "/main/login/form",
          "variant": "primary"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "üìù Register",
        "attrs": {
          "colSpan": 2,
          "colStart": 3,
          "navURL": "/main/register/form",
          "variant": "secondary"
        }
      }
    ]
  },
  "contextSchema": {
    "loginData": {
      "type": "object",
      "properties": {
        "userId": {
          "type": "string",
          "label": "Select User",
          "fieldType": "userSelect",
          "required": true
        }
      }
    },
    "registerData": {
      "type": "object",
      "properties": {
        "firstName": {
          "type": "string",
          "label": "First Name",
          "fieldType": "text",
          "required": true
        },
        "lastName": {
          "type": "string",
          "label": "Last Name",
          "fieldType": "text",
          "required": true
        },
        "email": {
          "type": "string",
          "label": "Email",
          "fieldType": "email",
          "required": true
        },
        "role": {
          "type": "string",
          "label": "Role",
          "fieldType": "select",
          "enum": ["reporter", "support"],
          "enumLabels": {
            "reporter": "Reporter",
            "support": "Support"
          },
          "required": true,
          "default": "reporter"
        }
      }
    }
  }
}