{
  "slug": "dashboard",
  "nodes": [
    {
      "slug": "view",
      "label": "Support Dashboard",
      "order": 1,
      "tplFile": "ListTableStep",
      "attrs": {
        "title": "Support Dashboard",
        "titleIcon": "headphones",
        "description": "Welcome to the support workspace. Handle and resolve tickets.",
        "schemaPath": "ticket",
        "collection": "tickets",
        "populate": ["reporter", "assignee"],
        "roleFilters": {
          "enabled": true,
          "options": [
            {
              "key": "all",
              "label": "All Tickets",
              "showAll": true
            },
            {
              "key": "assigned",
              "label": "Assigned to Me",
              "field": "assigneeId",
              "value": "{{currentUser.id}}"
            },
            {
              "key": "unassigned",
              "label": "Unassigned",
              "field": "assigneeId",
              "value": ""
            }
          ]
        },
        "headerWidgets": [
          { 
            "tplFile": "InfoWidget", 
            "title": "Support Dashboard",
            
            "attrs": { 
              "icon": "headphones",
              "content": "Handle and resolve tickets from all reporters.", 
              "variant": "info" 
            } 
          },
          { 
            "tplFile": "ButtonWidget", 
            "title": "All Tickets",
           
            "attrs": { 
              "icon": "clipboard-list",
              "navURL": "/support/list/view", 
              "variant": "primary" 
            } 
          }
        ],
        "columns": [
          { 
            "key": "title", 
            "label": "Title", 
            "type": "text" 
          },
          { 
            "key": "reporter", 
            "label": "Reporter", 
            "type": "relation",
            "relationPath": "reporter.firstName"
          },
          { 
            "key": "assignee", 
            "label": "Assigned To", 
            "type": "relation",
            "relationPath": "assignee.firstName"
          },
          { 
            "key": "priority", 
            "label": "Priority", 
            "type": "badge" 
          },
          { 
            "key": "status", 
            "label": "Status", 
            "type": "badge" 
          }
        ],
        "actions": [
          { 
            "type": "edit", 
            "label": "Handle", 
            "icon": "settings",
            "navURL": "/support/edit" 
          }
        ],
        "emptyState": { 
          "icon": "headphones", 
          "title": "No Tickets to Handle", 
          "description": "No tickets found for the selected filter." 
        },
        "pagination": { "pageSize": 10, "showTotal": true }
      }
    }
  ]
}