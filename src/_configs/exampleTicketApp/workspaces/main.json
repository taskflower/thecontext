{
  "name": "Main Workspace",
  "tplDir": "default",
  "templateSettings": {
    "layoutFile": "UniversalLayout",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "compact",
          "loginNavPath": "main/login/form",
          "logoutNavPath": "main/dashboard/view", 
          "editNavPath": "profile/edit/form"
        }
      },
      {
        "tplFile": "UserSystemSummaryWidget",
        "title": "System użytkowników",
        "attrs": {
          "showStats": true,
          "showRecentActivity": true,
          "colSpan": 2
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": "🎫 Ticket Management System",
        "attrs": {
          "content": "Manage support tickets, track issues and handle customer requests efficiently. Complete user authentication system integrated.",
          "variant": "info",
          "colSpan": 2
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "👤 Logowanie",
        "attrs": {
          "navPath": "users/login/form",
          "variant": "primary",
          "colSpan": 1
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": "📝 Nowe zgłoszenie",
        "attrs": {
          "navPath": "tickets/create/form",
          "variant": "primary",
          "colSpan": 1
        }
      }
    ]
  }
}