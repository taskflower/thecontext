        "priority": {
          "type": "string",
          "label": "Priorytet",
          "fieldType": "select",
          "enum": ["low", "medium", "high", "urgent"],
          "enumLabels": {
            "low": "niski",
            "medium": "redni",
            "high": "wysoki",
            "urgent": "pilny"
