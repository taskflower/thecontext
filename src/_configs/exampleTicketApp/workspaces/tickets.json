        "estimatedHours": {
          "type": "number",
          "label": "Szacowane godziny",
          "fieldType": "number",
          "minimum": 0,
          "maximum": 100,
          "required": false,
          "aiHint": "Realistyczna ocena czasu potrzebnego (1-40h), zostaw puste jeli trudno oszacowa"
        }
      }
    }
  }
}