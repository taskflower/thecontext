        "dueDate": {
          "type": "string",
          "label": "Termin wykonania",
          "fieldType": "date",
          "required": false,
          "aiHint": "Format YYYY-MM-DD, zostaw puste jeli brak konkretnego terminu"
        },
        "isUrgent": {
          "type": "boolean",
          "label": "Pilne zgoszenie",
          "fieldType": "checkbox",
          "default": false,
          "required": false,
          "aiHint": "true tylko dla awarii, problem贸w bezpieczestwa lub blokujcych prac"
