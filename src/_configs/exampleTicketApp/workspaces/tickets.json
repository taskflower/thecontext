          "enumLabels": {
            "new": "nowe",
            "in_progress": "w trakcie",
            "resolved": "rozwizane",
            "closed": "zamknite"
          },
          "enumHints": {
            "new": "Nowe zgoszenie oczekujce na przydzielenie",
            "in_progress": "Zgoszenie jest obecnie realizowane",
            "resolved": "Problem zosta rozwizany, oczekuje na potwierdzenie",
            "closed": "Zgoszenie zakoczone i zamknite"
          },
          "default": "new",
          "required": true,
          "aiHint": "Nowe zgoszenia zawsze status=new"
        },
        "category": {
          "type": "string",
          "label": "Kategoria",
          "fieldType": "select",
          "enum": ["bug", "feature", "support", "question"],
          "enumLabels": {
            "bug": "bd",
            "feature": "funkcja",
            "support": "wsparcie",
            "question": "pytanie"
          },
          "enumHints": {
            "bug": "Bdy w systemie, awarie, co nie dziaa",
            "feature": "Nowe funkcje, usprawnienia, zmiany w systemie", 
            "support": "Pomoc techniczna, instalacje, konfiguracje",
            "question": "Pytania, wyjanienia, porady"
          },
          "required": true,
          "aiHint": "bug=bdy/awarie, feature=nowe funkcje, support=pomoc/instalacje, question=pytania"
        },
        "assigneeId": {
          "type": "string", 
          "label": "Przypisany do",
          "fieldType": "userSelect",
          "required": false,
          "aiHint": "User ID who should handle this ticket"
        },
        "reporterId": {
          "type": "string",
          "label": "Zgaszajcy (ID)",
          "fieldType": "userSelect", 
          "required": false,
          "aiHint": "User ID who reported this issue"
        },
        "reporter": {
          "type": "string",
          "label": "Zgaszajcy",
