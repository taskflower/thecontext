{
  "slug": "tickets",
  "name": "Ticket Management",
  "templateSettings": {
    "layoutFile": "Simple",
    "widgets": [
      {
        "tplFile": "CurrentUserWidget",
        "title": "Logged User",
        "attrs": {
          "variant": "compact",
          "loginNavPath": "main/login/form",
          "logoutNavPath": "main/dashboard/view", 
          "editNavPath": "profile/edit/form"
        }
      },
      {
        "tplFile": "InfoWidget",
        "title": " Ticket Management",
        "attrs": {
          "content": "Manage support tickets, track issues and handle customer requests efficiently.",
          "variant": "info",
          "colSpan": "full"
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": " Create New Ticket", 
        "attrs": {
          "navPath": "create/new",
          "variant": "primary",
          "colSpan": 1
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": " View All Tickets", 
        "attrs": {
          "navPath": "list/view",
          "variant": "secondary",
          "colSpan": 1
        }
      },
      {
        "tplFile": "ButtonWidget",
        "title": " Wygeneruj z AI",
        "attrs": {
          "navPath": "llm-create/new",
          "variant": "secondary",
          "colSpan": 1
        }
      }
    ]
