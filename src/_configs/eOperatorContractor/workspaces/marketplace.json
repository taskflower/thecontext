    "contextSchema": {
      "marketplaceRequest": {
        "type": "object",
        "properties": {
          "id": {
            "type": "string",
            "label": "ID zlecenia",
            "fieldType": "text",
            "required": false,
            "aiHint": "Request identifier"
          },
          "workScope": {
            "type": "string",
            "label": "Zakres prac",
            "fieldType": "textarea",
            "readOnly": true,
            "required": false,
            "aiHint": "Description of work scope"
          },
          "postalCode": {
            "type": "string",
            "label": "Kod pocztowy",
            "fieldType": "text",
            "readOnly": true,
            "required": false,
            "aiHint": "Postal code"
          },
          "city": {
            "type": "string",
            "label": "Miejscowo",
            "fieldType": "text",
            "readOnly": true,
            "required": false,
            "aiHint": "City name"
          },
          "heatSource": {
            "type": "array",
            "label": "殴r贸do ciepa",
            "fieldType": "multiselect",
            "readOnly": true,
            "required": false,
            "aiHint": "Required heat sources"
          },
          "thermomodernization": {
            "type": "object",
            "label": "Termomodernizacja",
            "fieldType": "group",
            "readOnly": true,
            "required": false,
            "aiHint": "Thermomodernization requirements"
          },
          "budget": {
            "type": "number",
            "label": "Przewidywany bud偶et (PLN)",
            "fieldType": "number",
