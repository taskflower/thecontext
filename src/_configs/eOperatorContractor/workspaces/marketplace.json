          },
          "preferredStartDate": {
            "type": "string",
            "label": "Preferowany termin rozpoczcia",
            "fieldType": "date",
            "readOnly": true,
            "required": false,
            "aiHint": "Preferred start date"
          },
          "publishedDate": {
            "type": "string",
            "label": "Data publikacji",
            "fieldType": "date",
            "readOnly": true,
            "required": false,
            "aiHint": "When request was published"
          },
          "offersCount": {
            "type": "number",
            "label": "Liczba ofert",
            "fieldType": "number",
            "readOnly": true,
            "required": false,
            "aiHint": "Number of offers submitted"
          }
        }
      },
      "contractorOffer": {
        "type": "object",
        "properties": {
          "priceOffer": {
            "type": "number",
            "label": "Oferowana cena (PLN)",
            "fieldType": "number",
            "minimum": 0,
            "required": true,
            "aiHint": "Offered price for the project"
          },
          "estimatedDuration": {
            "type": "number",
            "label": "Szacowany czas realizacji (dni)",
            "fieldType": "number",
            "minimum": 1,
            "required": true,
            "aiHint": "Estimated project duration in days"
          },
          "offerDescription": {
            "type": "string",
            "label": "Opis oferty",
            "fieldType": "textarea",
            "required": true,
            "aiHint": "Detailed description of what you offer"
          },
          "includedServices": {
            "type": "array",
            "label": "Zakres usug",
            "fieldType": "multiselect",
            "items": {
              "type": "string",
              "enum": ["design", "materials", "installation", "warranty", "maintenance", "permits", "cleanup"]
            },
            "enumLabels": {
              "design": "Projekt/dokumentacja",
              "materials": "Materiay",
              "installation": "Monta偶",
              "warranty": "Gwarancja",
              "maintenance": "Serwis",
              "permits": "Zaatwienie pozwole",
              "cleanup": "Sprztanie po pracach"
            },
            "required": true,
            "aiHint": "Services included in the offer"
          },
          "warrantyPeriod": {
            "type": "number",
            "label": "Okres gwarancji (miesicy)",
            "fieldType": "number",
            "minimum": 0,
            "maximum": 120,
            "required": false,
            "aiHint": "Warranty period in months"
          },
          "paymentTerms": {
            "type": "string",
            "label": "Warunki patnoci",
            "fieldType": "select",
            "enum": ["upfront", "50_50", "progressive", "completion"],
            "enumLabels": {
              "upfront": "Patno z g贸ry",
              "50_50": "50% z g贸ry, 50% po zakoczeniu",
              "progressive": "Patnoci etapowe",
              "completion": "Patno po zakoczeniu"
            },
            "required": true,
            "aiHint": "Payment terms"
          },
          "additionalNotes": {
            "type": "string",
            "label": "Dodatkowe uwagi",
            "fieldType": "textarea",
            "required": false,
            "aiHint": "Any additional notes or conditions"
          },
          "contactInfo": {
            "type": "string",
            "label": "Informacje kontaktowe",
            "fieldType": "textarea",
            "required": true,
            "aiHint": "How client can contact you"
          }
        }
      }
    }
