[
  {
    "name": "Business Analytics",
    "description": "Analiza biznesowa i finansowa",
    "tplDir": "scenario-builder",
    "workspaces": [
      {
        "id": "workspace-minimal",
        "name": "Demo Biznesowe",
        "description": "Zbieranie danych i generowanie raportu AI",
        "icon": "briefcase",
        "scenarios": [
          {
            "id": "scenario-business",
            "name": "Analiza finansowa",
            "description": "Zbierz dane i wygeneruj raport ROI",
            "icon": "calculator",
            "systemMessage": "Jesteś asystentem finansowym.",
            "nodes": [
              {
                "id": "collect-data",
                "scenarioId": "scenario-business",
                "label": "Krok 1: Dane finansowe",
                "assistantMessage": "Podaj przychody i koszty projektu:",
                "contextPath": "collect-data",
               "tplFile": "formStep",
                "order": 0,
                "attrs": {
                  "schemaPath": "schemas.form.business"
                }
              },
              {
                "id": "generate-report",
                "scenarioId": "scenario-business",
                "label": "Krok 2: Raport ROI",
                "assistantMessage": "Generuję raport ROI na podstawie danych...",
                "contextPath": "generate-report",
                "tplFile": "llmStep",
                "order": 1,
                "attrs": {
                  "autoStart": true,
                  "includeSystemMessage": true,
                  "initialUserMessage": "Na podstawie danych: przychody={{collect-data.revenue}}, koszty={{collect-data.cost}} oblicz ROI i zaproponuj rekomendacje.",
                  "schemaPath": "schemas.llm.businessReport"
                }
              },
              {
                "id": "show-summary",
                "scenarioId": "scenario-business",
                "label": "Krok 3: Podsumowanie",
                "assistantMessage": "Oto podsumowanie wyników analizy finansowej twojego projektu.",
                "contextPath": "summary",
                "tplFile": "widgetsStep",
                "order": 2,
                "attrs": {
                  "widgets": [
                    {
                      "file": "info",
                      "data": {
                        "title": "Demo Biznesowe",
                        "description": "Wybierz jeden z dostępnych scenariuszy",
                        "url": "/",
                        "urlLAbel": "Wróć do listy aplikacji",
                        "variant": "info"
                      }
                    },
                    {
                      "type": "title",
                      "title": "Wyniki analizy finansowej"
                    },
                    {
                      "type": "stats",
                      "title": "Kluczowe wskaźniki finansowe",
                      "description": "Zestawienie danych finansowych i wyników analizy",
                      "dataPaths": {
                        "xxx":"collect-data.revenue",
                        "Przychody": "inputData.revenue",
                        "Koszty": "inputData.cost",
                        "ROI": "analysisResults.roi"
                      }
                    },
                    {
                      "type": "info",
                      "title": "Opłacalność projektu",
                      "dataPath": "analysisResults.profitability",
                      "variant": "warning"
                    },
                    {
                      "type": "cardList",
                      "title": "Rekomendacje",
                      "dataPath": "analysisResults.recommendations"
                    }
                  ]
                }
              }
            ]
          },
          {
            "id": "scenario-marketing",
            "name": "Analiza marketingowa",
            "description": "Analiza wydatków marketingowych i efektywności",
            "icon": "trending-up",
            "systemMessage": "Jesteś asystentem marketingowym, specjalizującym się w analizie efektywności kampanii reklamowych.",
            "dependsOn": [
              "scenario-business"
            ],
            "nodes": [
              {
                "id": "marketing-data",
                "scenarioId": "scenario-marketing",
                "label": "Krok 1: Dane marketingowe",
                "assistantMessage": "Podaj informacje dotyczące twoich działań marketingowych:",
                "contextPath": "marketing-data",
                "template": "form-step",
                "order": 0,
                "attrs": {
                  "schemaPath": "schemas.form.marketing"
                }
              },
              {
                "id": "marketing-analysis",
                "scenarioId": "scenario-marketing",
                "label": "Krok 2: Analiza efektywności",
                "assistantMessage": "Analizuję efektywność twoich działań marketingowych w oparciu o zebrane dane...",
                "contextPath": "marketing-analysis",
                "template": "llm-step",
                "order": 1,
                "attrs": {
                  "autoStart": true,
                  "includeSystemMessage": true,
                  "usePreviousScenarioData": true,
                  "initialUserMessage": "Na podstawie danych finansowych: przychody={{scenario-business.collect-data.revenue}}, koszty={{scenario-business.collect-data.cost}}, oraz danych marketingowych: budżet reklamowy={{marketing-data.adBudget}}, liczba kliknięć={{marketing-data.clicks}}, liczba konwersji={{marketing-data.conversions}}, przeprowadź analizę efektywności marketingowej. Oblicz wskaźniki: CPA (koszt pozyskania klienta), ROAS (zwrot z wydatków reklamowych), CPC (koszt za kliknięcie) oraz CTR (jeśli podano dane o wyświetleniach). Zaproponuj strategię optymalizacji marketingu.",
                  "schemaPath": "schemas.llm.marketingAnalysis"
                }
              },
              {
                "id": "metrics-summary",
                "scenarioId": "scenario-marketing",
                "label": "Krok 3: Metryki marketingowe",
                "assistantMessage": "Oto kluczowe metryki i wskaźniki marketingowe dla twojej kampanii.",
                "contextPath": "metrics-summary",
                "template": "widgets-step",
                "order": 2,
                "attrs": {
                 "widgets": [
                    {
                      "type": "title",
                      "title": "Analiza efektywności marketingowej"
                    },
                    {
                      "type": "metrics",
                      "title": "Kluczowe wskaźniki efektywności",
                      "dataPaths": {
                        "CPA": "analysisResults.cpa",
                        "ROAS": "analysisResults.roas",
                        "CPC": "analysisResults.cpc",
                        "Konwersja": "analysisResults.conversionRate"
                      }
                    },
                    {
                      "type": "stats",
                      "title": "Dane wejściowe",
                      "description": "Zestawienie wprowadzonych danych",
                      "dataPaths": {
                        "Budżet reklamowy": "inputData.adBudget",
                        "Przychody": "financialData.revenue",
                        "Liczba kliknięć": "inputData.clicks",
                        "Liczba konwersji": "inputData.conversions"
                      }
                    },
                    {
                      "type": "info",
                      "title": "Ocena efektywności",
                      "dataPath": "analysisResults.effectivenessRating",
                      "variant": "info"
                    }
                  ]
                }
              },
              {
                "id": "action-plan",
                "scenarioId": "scenario-marketing",
                "label": "Krok 4: Plan działania",
                "assistantMessage": "Na podstawie przeprowadzonych analiz, przygotowałem plan działania w celu optymalizacji twoich działań marketingowych.",
                "contextPath": "action-plan",
                "template": "widgets-step",
                "order": 3,
                "attrs": {
                  "widgets": [
                    {
                      "type": "title",
                      "title": "Plan działania marketingowego"
                    },
                    {
                      "type": "info",
                      "title": "Strategia optymalizacji",
                      "dataPath": "marketingAnalysis.optimizationStrategy",
                      "variant": "success"
                    },
                    {
                      "type": "DataDisplayWidget",
                      "title": "Mocne strony kampanii",
                      "dataPath": "marketingAnalysis.strengths"
                    },
                    {
                      "type": "DataDisplayWidget",
                      "title": "Słabe strony kampanii",
                      "dataPath": "marketingAnalysis.weaknesses"
                    },
                    {
                      "type": "cardList",
                      "title": "Rekomendowane działania",
                      "dataPath": "marketingAnalysis.recommendations"
                    }
                  ]
                }
              }
            ]
          }
        ],
        "templateSettings": {
          "layout": "simple",
          "widgets": [
            {
              "file": "info",
              "data": {
                "title": "Demo Biznesowe",
                "description": "Wybierz jeden z dostępnych scenariuszy",
                "url": "/",
                "urlLAbel": "Wróć do listy aplikacji",
                "variant": "info"
              }
            }
          ]
        },
        "initialContext": {
          "schemas": {
            "form": {
              "business": [
                {
                  "name": "revenue",
                  "label": "Przychody (PLN)",
                  "type": "number",
                  "required": true
                },
                {
                  "name": "cost",
                  "label": "Koszty (PLN)",
                  "type": "number",
                  "required": true
                }
              ],
              "marketing": [
                {
                  "name": "adBudget",
                  "label": "Budżet reklamowy (PLN)",
                  "type": "number",
                  "required": true
                },
                {
                  "name": "clicks",
                  "label": "Liczba kliknięć",
                  "type": "number",
                  "required": true
                },
                {
                  "name": "conversions",
                  "label": "Liczba konwersji",
                  "type": "number",
                  "required": true
                },
                {
                  "name": "impressions",
                  "label": "Liczba wyświetleń",
                  "type": "number",
                  "required": false
                },
                {
                  "name": "adPlatform",
                  "label": "Platforma reklamowa",
                  "type": "select",
                  "options": [
                    "Google Ads",
                    "Facebook Ads",
                    "LinkedIn Ads",
                    "Instagram Ads",
                    "TikTok Ads",
                    "Inne"
                  ],
                  "required": true
                }
              ]
            },
            "llm": {
              "businessReport": {
                "roi": "Wartość ROI w procentach",
                "profitability": "Ocena opłacalności projektu",
                "recommendations": [
                  "Lista rekomendacji"
                ]
              },
              "marketingAnalysis": {
                "cpa": "Koszt pozyskania klienta (PLN)",
                "roas": "Zwrot z wydatków reklamowych (%)",
                "cpc": "Koszt za kliknięcie (PLN)",
                "ctr": "Współczynnik klikalności (%)",
                "conversionRate": "Współczynnik konwersji (%)",
                "effectivenessRating": "Ogólna ocena efektywności kampanii (1-10)",
                "strengths": [
                  "Lista mocnych stron kampanii"
                ],
                "weaknesses": [
                  "Lista słabych stron kampanii"
                ],
                "recommendations": [
                  "Lista rekomendacji"
                ],
                "optimizationStrategy": "Strategia optymalizacji"
              }
            }
          }
        }
      }
    ]
  }
]