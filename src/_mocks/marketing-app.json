[
  {
    "name": "Analiza Marketingowa Strony",
    "description": "Analiza strony internetowej pod kątem przyszłych kampanii marketingowych",
    "tplDir": "default",
    "workspaces": [
      {
        "id": "workspace-marketing",
        "name": "Analiza Marketingowa",
        "description": "Analiza strony internetowej i generowanie opisu marketingowego",
        "icon": "globe",
        "scenarios": [
          {
            "id": "scenario-website-analysis",
            "name": "Analiza Strony WWW",
            "description": "Analiza strony i przygotowanie opisu marketingowego",
            "icon": "search",
            "nodes": [
              {
                "id": "collect-url",
                "scenarioId": "scenario-website-analysis",
                "label": "Krok 1: Adres strony",
                "assistantMessage": "Podaj adres URL strony do analizy:",
                "contextPath": "website-data",
                "tplFile": "FormStep",  
                "order": 0,
                "attrs": {
                  "schemaPath": "schemas.form.website"
                }
              },
              {
                "id": "analyze-website",
                "scenarioId": "scenario-website-analysis",
                "label": "Krok 2: Analiza strony",
                "assistantMessage": "Analizuję stronę na podstawie podanego adresu...",
                "contextPath": "website-summary",
                "tplFile": "LlmStep",
                "order": 1,
                "attrs": {
                  "autoStart": true,
                  "initialUserMessage": "Przeanalizuj stronę pod adresem {{website-data.url}} i przygotuj szczegółowe streszczenie jej zawartości. Zwróć JSON z polami: 'summary' (streszczenie zawartości strony), 'keywords' (słowa kluczowe występujące na stronie jako tablica), 'mainTopics' (główne tematy strony jako tablica)."
                }
              },
              {
                "id": "create-marketing",
                "scenarioId": "scenario-website-analysis",
                "label": "Krok 3: Opis marketingowy",
                "assistantMessage": "Przygotowuję opis marketingowy na podstawie analizy strony...",
                "contextPath": "marketing-description",
                "tplFile": "LlmStep",
                "order": 2,
                "attrs": {
                  "autoStart": true,
                  "initialUserMessage": "Na podstawie analizy strony: {{website-summary.summary}} i słów kluczowych: {{website-summary.keywords}} przygotuj opis marketingowy, który może być wykorzystany w przyszłych kampaniach. Dodatkowo określ branżę, do której należy ta strona. Zwróć JSON z polami: 'marketingDescription' (opis marketingowy o długości 150-200 słów), 'industry' (nazwa branży), 'targetAudience' (grupa docelowa), 'suggestedChannels' (sugerowane kanały marketingowe jako tablica z obiektami w formacie {id: string, name: string, description: string, icon: string, count: number, countLabel: string}), 'metrics' (metryki jako tablica z obiektami w formacie {label: string, value: number, prefix: string, suffix: string, change: number})."
                }
              },
              {
                "id": "summary",
                "scenarioId": "scenario-website-analysis",
                "label": "Krok 4: Podsumowanie",
                "assistantMessage": "Oto podsumowanie analizy marketingowej strony:",
                "contextPath": "summary-data",
                "tplFile": "WidgetsStep",
                "order": 3,
                "attrs": {
                  "widgets": [
                    {
                      "tplFile": "Title",
                      "title": "Wyniki analizy marketingowej strony",
                      "size": "large"
                    },
                    {
                      "tplFile": "Info",
                      "title": "Analizowana strona",
                      "dataPath": "website-data.url",
                      "variant": "info"
                    },
                    {
                      "tplFile": "Info",
                      "title": "Branża",
                      "dataPath": "marketing-description.industry",
                      "variant": "success"
                    },
                    {
                      "tplFile": "DataDisplay",
                      "title": "Streszczenie strony",
                      "type": "keyValue",
                      "dataPath": "website-summary"
                    },
                    {
                      "tplFile": "DataDisplay",
                      "title": "Słowa kluczowe",
                      "type": "list",
                      "dataPath": "website-summary.keywords"
                    },
                    {
                      "tplFile": "DataDisplay",
                      "title": "Opis marketingowy",
                      "type": "code",
                      "dataPath": "marketing-description.marketingDescription"
                    },
                    {
                      "tplFile": "Info",
                      "title": "Grupa docelowa",
                      "dataPath": "marketing-description.targetAudience",
                      "variant": "warning"
                    },
                    {
                      "tplFile": "CardList",
                      "dataPath": "marketing-description.suggestedChannels"
                    },
                    {
                      "tplFile": "Metrics",
                      "title": "Metryki marketingowe",
                      "dataPath": "marketing-description.metrics"
                    }
                  ]
                }
              }
            ]
          }
        ],
        "templateSettings": {
          "layoutFile": "Simple",
          "widgets": [
            {
              "tplFile": "Title",
              "title": "Analiza Marketingowa Strony",
              "description": "Wybierz scenariusz do uruchomienia",
              "size": "large"
            },
            {
              "tplFile": "Info",
              "data": {
                "title": "Jak to działa?",
                "description": "Narzędzie analizuje podaną stronę internetową i przygotowuje szczegółowy opis marketingowy, który może być wykorzystany w przyszłych kampaniach.",
                "variant": "info"
              }
            },
            {
              "tplFile": "Stats",
              "title": "Ostatnia analiza",
              "description": "Dane z ostatnio przeprowadzonej analizy",
              "dataPaths": {
                "URL": "website-data.url",
                "Branża": "marketing-description.industry",
                "Grupa docelowa": "marketing-description.targetAudience"
              }
            },
            {
              "tplFile": "ScenarioList"
            }
          ]
        },
        "initialContext": {
          "schemas": {
            "form": {
              "website": [
                {
                  "name": "url",
                  "label": "Adres URL strony",
                  "type": "text",
                  "required": true,
                  "placeholder": "https://example.com"
                }
              ]
            }
          }
        }
      }
    ]
  }
]