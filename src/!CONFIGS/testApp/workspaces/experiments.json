    "contextSchema": {
      "experiment": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "label": "Experiment Name",
            "required": true
          },
          "description": {
            "type": "string",
            "label": "Description",
            "widget": "textarea",
            "required": true
          },
          "configType": {
            "type": "string",
            "label": "Config Type",
            "enum": ["workspace", "scenario", "widget", "step"],
            "default": "workspace",
            "required": true
          },
          "targetPath": {
            "type": "string",
            "label": "Target Config Path",
            "placeholder": "/src/configs/testApp/workspaces/new-workspace.json",
            "required": true
          },
          "prompt": {
            "type": "string",
            "label": "User Prompt",
            "widget": "textarea",
            "placeholder": "Describe what you want to generate...",
            "required": true
          },
          "systemMessage": {
            "type": "string",
            "label": "System Instructions",
            "widget": "textarea",
            "placeholder": "Additional instructions for the AI..."
          },
          "temperature": {
            "type": "number",
            "label": "AI Temperature",
            "default": 0.7,
            "min": 0,
            "max": 2,
            "step": 0.1
          },
          "status": {
            "type": "string",
            "label": "Status",
            "enum": ["draft", "pending", "running", "completed", "error"],
            "default": "draft",
            "required": true
          },
          "tags": {
            "type": "array",
            "label": "Tags",
            "items": {
              "type": "string"
            }
          }
        }
      }
    }
  }