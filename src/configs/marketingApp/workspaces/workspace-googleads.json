{
  "id": "workspace-googleads",
  "slug": "workspace-googleads",
  "name": "Google Ads",
  "description": "Zarządzanie kampaniami i budżetami Google Ads",
  "icon": "chart",
  "templateSettings": {
    "layoutFile": "Simple",
    "widgets": [
      {
        "tplFile": "InfoWidget",
        "title": "Zarządzanie Google Ads",
        "data": "Moduł przeznaczony do tworzenia i zarządzania kampaniami Google Ads oraz ich budżetami.",
        "icon": "info",
        "colSpan": "full"
      },
      {
        "tplFile": "WidgetWrapperApi",
        "apiEndpoint": "/api/v1/services/googleads/campaign-budgets",
        "method": "GET",
        "responseTransform": "res => res.budgets.map(budget => ({ id: budget.budgetId, name: budget.name, amount: budget.amount / 1000000, deliveryMethod: budget.deliveryMethod, icon: 'money' }))",
        "transformErrors": "err => `Błąd podczas pobierania budżetów: ${err.message || 'Nieznany błąd'}`",
        "widget": "ListTableWidget",
        "widgetProps": {
          "title": "Aktywne budżety kampanii",
          "emptyMessage": "Brak zdefiniowanych budżetów"
        },
        "colSpan": "full"
      },
      {
        "tplFile": "ScenarioListWidget",
        "title": "Dostępne scenariusze",
        "colSpan": "full"
      }
    ]
  },
  "contextSchema": {
    "type": "object",
    "properties": {
      "campaign-data": {
        "type": "object",
        "properties": {
          "budget": { 
            "type": "object", 
            "properties": {
              "name": { "type": "string" },
              "amount": { "type": "number" },
              "deliveryMethod": { "type": "string" },
              "explicitlyShared": { "type": "boolean" },
              "amountMicros": { "type": "number" },
              "budgetId": { "type": "string" }
            } 
          },
          "campaign": { 
            "type": "object", 
            "properties": {
              "name": { "type": "string" },
              "status": { "type": "string" },
              "advertisingChannelType": { "type": "string" },
              "biddingStrategyType": { "type": "string" },
              "campaignBudgetId": { "type": "string" },
              "campaignId": { "type": "string" }
            } 
          },
          "adGroups": { 
            "type": "object", 
            "properties": {
              "groups": { "type": "array", "items": { "type": "string" } },
              "campaignId": { "type": "string" },
              "adGroupsData": { "type": "array", "items": { "type": "object" } }
            } 
          },
          "keywords": { 
            "type": "object", 
            "properties": {
              "keywordsList": { "type": "array", "items": { "type": "string" } },
              "matchType": { "type": "string" }
            } 
          },
          "roi": { 
            "type": "object", 
            "properties": {
              "roi": { "type": "number" },
              "profits": { "type": "number" },
              "investment": { "type": "number" }
            } 
          }
        }
      }
    }
  }
}